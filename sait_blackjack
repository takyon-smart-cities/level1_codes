print("enter your money: ")
player_name = player(input(),input())

while(x == "yes"):
    dealer_1 = dealer(0,0)
    
    print("choose options : hit, stand, double , increase_bet or exit_game")
    print(" your bet:{}, your hand : {}".format(bet, str(player_name.hand) ))
    option=input()
 
    if option == "hit":
        player.hit(player_name)
        dealer.hit(dealer_1)

    elif option == "stand":
        dealer.stand(dealer_1)
        stand(dealer_1)
    elif option == "double":
        player.double(player_name)
        dealer.double(dealer_1)

    else:
        print("wrong option idiot")
    if player_name.value_of_hand or dealer_1.value_of_hand > 21:
        if player_name.value_of_hand >21:
            print("dealer  won you idiot")
            
        else :
            print("you  won you idiot")
            

    elif (player_name.value_of_hand or dealer_1.value_of_hand < 21) and 3<=len(player_name.hand):
        if player_name.value_of_hand > dealer_1.value_of_hand:
            print("you  won you idiot")
            
            player_name.score += 1
        elif  (player_name.value_of_hand == dealer_1.value_of_hand) and 3<=len(player_name.hand):
            print("dealer  won you idiot")
            
            dealer_1.score += 1
        else:
            print("its a tie")

    
    if  player_name.score < dealer_1.score :
        print(" {} has won ". format(dealer_1))

    else :
        print(" {} has won ". format(player_name))

